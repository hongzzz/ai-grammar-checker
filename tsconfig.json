{
  "compilerOptions": {
    "strict": true,
    "target": "ES2015",
    "moduleResolution": "bundler",
    "module": "ES6",
    "esModuleInterop": true,
    "sourceMap": false,
    "rootDir": "src",
    "outDir": "dist/js",
    "noEmitOnError": true,
    "jsx": "react",
    "typeRoots": ["node_modules/@types"],
    "baseUrl": ".", // 添加 baseUrl
    "paths": {
      "@/*": ["src/*"] // 添加 paths 配置
    }
  }
}
