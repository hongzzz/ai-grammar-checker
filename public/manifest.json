{
  "manifest_version": 3,

  "name": "AI Grammar Checker",
  "description": "AI Grammar Checker is a tool that checks your text for grammar and sentence structure errors.",
  "version": "1.0",

  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },

  "action": {
    "default_icon": { "16": "icon.png" },
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/vendor.js", "js/content_script.js"]
    }
  ],

  "background": {
    "service_worker": "js/background.js"
  },

  "permissions": ["storage"],

  "host_permissions": ["<all_urls>"]
}
